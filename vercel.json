{
  "version": 2,
  "name": "signcast-frontend",
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/$1"
    }
  ],
  "buildCommand": "cd apps/frontend && npm run build",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "cd apps/frontend && npm install",
  "framework": "vite",
  "env": {
    "VITE_BACKEND_URL": "@vite_backend_url",
    "VITE_ENABLE_TEXT_SIMPLIFICATION": "@vite_enable_text_simplification",
    "VITE_ENABLE_POSE_GENERATION": "@vite_enable_pose_generation",
    "VITE_ENABLE_SYSTEM_AUDIO": "@vite_enable_system_audio",
    "VITE_DEFAULT_SIGN_SIZE": "@vite_default_sign_size",
    "VITE_MAX_RECORDING_TIME": "@vite_max_recording_time",
    "VITE_ANIMATION_FPS": "@vite_animation_fps",
    "VITE_DEBUG": "@vite_debug",
    "VITE_LOG_LEVEL": "@vite_log_level"
  }
}
